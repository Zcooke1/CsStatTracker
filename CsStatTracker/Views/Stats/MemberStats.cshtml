@model StatsViewModel

@{
    ViewData["Title"] = "Get Stats";
}


<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    
    
</head>

    <div class="container">
        <h2 class="text-white">@Model.Username's Stats</h2>
        <img src="~/Img/winrate-icon.png" />
        <img src="~/Img/damage-icon.png" />
		<img src="~/Img/headshot-icon.png" />
        <table class="table table-dark table-striped">
			<thead class="text-white">
                <tr>
                    <th>Wins</th>
                    <th>Losses</th>
                    <th>Win Rate</th>
                    
					<th>Damage</th>
                    <th>Headshot %</th>
                    <th>Rounds Played</th>
                    <th>Rounds Won</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td id="Wins">@Model.Wins</td>
                    <td id="Losses">@Model.Losses</td>
                    <td id="Winrate">@Model.WinRate</td>
                    <td id="Damage">@Model.Damage</td>
                    <td id="HSP">@Model.HeadShotPercent</td>
                    <td id="RoundsPlayed">@Model.RoundsPlayed</td>
                    <td id="RoundsWon">@Model.RoundsWon</td>
                </tr>
            </tbody>
        </table>
    </div>
    <button id="btnGraph" class=" btn btn-success btn-custom">Show Graph</button>
    <div style="width: 800px;"><canvas id="pieChart"></canvas></div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    
